@using WebApp.DTOs
@model AccountDTO;

<div class="row card card-info">
    <div class="card-header">
        <h3 class="card-title text-white">
            <b>Create Account</b>
        </h3>
    </div>
    <div class=" card-body col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="p-2">
                <strong class="control-label">First Name</strong>
            </div>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">A</span>
                </div>
                <input asp-for="FirstName" class="form-control p-1 rounded-end-2" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="p-2">
                <strong class="control-label">Last Name</strong>
            </div>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">A</span>
                </div>
                <input asp-for="LastName" class="form-control p-1 rounded-end-2" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="d-inline-flex mt-2">
                <div class="p-2">
                    <a href="~/Account/Overview/@TempData["userId"]">
                        <input type="button" value="Back to Accounts" class="btn btn-secondary text-bolded" />
                    </a>
                </div>
                <div class="form-group p-2">
                    <input type="submit" value="Create Account" class="btn btn-info text-white text-bolded" />
                </div>
            </div>
        </form>
    </div>
</div>