@using WebApp.Models.Account
@model DetalizedAccountViewModel;

<h3>Account Details</h3>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Update">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label p-1"></label>
                <input asp-for="Id" class="form-control p-1" value="@Model.Id" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label p-1"></label>
                <input asp-for="FirstName" class="form-control p-1" value="@Model.FirstName" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label p-1"></label>
                <input asp-for="LastName" class="form-control p-1" value="@Model.LastName" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Balance" class="control-label p-1"></label>
                <input asp-for="Balance" class="form-control p-1" value="@Model.Balance" />
                <span asp-validation-for="Balance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreatedAt" class="control-label p-1"></label>
                <input asp-for="CreatedAt" class="form-control p-1" value="@Model.CreatedAt" />
                <span asp-validation-for="CreatedAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label p-1"></label>
                <input asp-for="Status" class="form-control p-1" value="@Model.Status" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group p-2">
                <a href="~/Account/Update/@Model.Id"><input value="Update" class="btn btn-primary p-1" /></a>
                <a href="~/Account/Index/@Model.Id"><input value="Back" class="btn btn-secondary p-1" /></a>
            </div>
        </form>
    </div>
</div>