@using WebApp.Models.User
@model DetalizedUserViewModel;

<div>
    <h5>
        Accounts
    </h5>
</div>
<div class="row">
    <div class="col-md-4">
        <div class="card card-primary card-outline">
            <div class="card-body p-2">
                <strong>Email</strong>
                <p>@Model.Email</p>
                <hr />
                <strong>Created At</strong>
                <p>@Model.CreatedAt</p>
            </div>
        </div>
        <div>
            <a href="~/Account/Create/@Model.Id">
                <input type="button" value="Create Account" class="btn btn-outline-secondary"/>
            </a>
        </div>
    </div>
    <div class="align-content-center container col-8 navbar-nav-scroll">
        @foreach (var item in Model.Accounts)
        {
            <a href="~/Account/Index/@item.Id" class="link-underline-opacity-0 link-decorator-disable">
                <div class="card bg-light d-flex flex-fill div-hover">
                    <div class="card-header text-muted border-bottom-0">
                        <b>@item.Id</b>
                    </div>
                    <div class="card-body p-2 row">
                        <h2 class="lead col-md-4">@item.FirstName @item.LastName</h2>
                        <p class="text-muted text-sm-center col-md-4">@item.Balance $</p>
                        <p class="text-muted text-sm-center col-md-4">@item.Status</p>
                    </div>
                </div>
            </a>
        }
        <div class="os-scrollbar os-scrollbar-vertical os-scrollbar-auto-hidden">
            <div class="os-scrollbar-track">
                <div class="os-scrollbar-handle">

                </div>
            </div>
        </div>
    </div>
</div>