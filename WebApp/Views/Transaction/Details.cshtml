@using WebApp.Models.Transaction
@model TransactionDetailsViewModel;
@{
    var data = Model;
}

<h3>Details</h3>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Update">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" value="@data.Id" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SourceAccountId" class="control-label"></label>
                <input asp-for="SourceAccountId" class="form-control" value="@data.SourceAccountId"/>
                <span asp-validation-for="SourceAccountId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SourceFirstName" class="control-label"></label>
                <input asp-for="SourceFirstName" class="form-control" value="@data.SourceFirstName" />
                <span asp-validation-for="SourceFirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SourceLastName" class="control-label"></label>
                <input asp-for="SourceLastName" class="form-control" value="@data.SourceLastName" />
                <span asp-validation-for="SourceLastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StateOfTransaction" class="control-label"></label>
                <input id="state-of-transaction" asp-for="StateOfTransaction" class="form-control" value="@data.StateOfTransaction" />
                <span asp-validation-for="StateOfTransaction" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" value="@data.Amount" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OperationType" class="control-label"></label>
                <input asp-for="OperationType" class="form-control" value="@data.OperationType" />
                <span asp-validation-for="OperationType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" value="@data.Description" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DestinationAccountId" class="control-label"></label>
                <input asp-for="DestinationAccountId" class="form-control" value="@data.DestinationAccountId" />
                <span asp-validation-for="DestinationAccountId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DestinationFirstName" class="control-label"></label>
                <input asp-for="DestinationFirstName" class="form-control" value="@data.DestinationFirstName" />
                <span asp-validation-for="DestinationFirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DestinationLastName" class="control-label"></label>
                <input asp-for="DestinationLastName" class="form-control" value="@data.DestinationLastName" />
                <span asp-validation-for="DestinationLastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input id="update-reject-button" type="submit" value="Reject Transfer" formaction="/Transaction/Update/@ViewData["Id"]" class="btn btn-primary" />
                <input id="update-accept-button" type="submit" value="Accept Transfer" formaction="/Transaction/Update/@ViewData["Id"]" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>