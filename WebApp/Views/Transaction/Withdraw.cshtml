@using WebApp.DTOs;
@model TransactionDTO;

<div class="row card card-info">
    <div class="card-header">
        <h3 class="card-title text-white">
            <b>Withdraw</b>
        </h3>
    </div>
    <div class="card-body col-12">
        <form asp-action="Withdraw">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="p-2">
                <strong class="control-label">Operation Type</strong>
            </div>
            <div class="input-group p-1">

                <input asp-for="OperationType" class="form-control rounded-end-2" value="Withdrawal" disabled />
                <span asp-validation-for="OperationType" class="text-danger"></span>
            </div>

            <div class="p-2">
                <strong class="control-label">Amount</strong>
            </div>
            <div class="input-group p-1">
                <div class="input-group-prepend">
                    <span class="input-group-text">$</span>
                </div>
                <input asp-for="Amount" class="form-control rounded-end-2" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>

            <div class="p-2">
                <strong class="control-label">Description</strong>
            </div>
            <div class="input-group p-1">
                <div class="input-group-prepend">
                    <span class="input-group-text">A</span>
                </div>
                <input asp-for="Description" class="form-control rounded-end-2" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="p-2">
                <strong class="control-label">Destination Account ID</strong>
            </div>
            <div class="input-group p-1">
                <div class="input-group-prepend">
                    <span class="input-group-text">&rArr;</span>
                </div>
                <input asp-for="DestinationAccountId" placeholder="For Transfer" class="form-control rounded-end-2" disabled />
                <span asp-validation-for="DestinationAccountId" class="text-danger"></span>
            </div>
            <div class="form-group p-2">
                <a href="~/Account/Index/@ViewData["accId"]" class="p-2 link-decorator-disable">
                    <input type="button" class="btn btn-secondary text-bolded" value="Back To Account" />
                </a>
                <button type="submit" class="btn btn-info text-white"><b>Withdraw</b></button>
            </div>
        </form>
    </div>
</div>
            