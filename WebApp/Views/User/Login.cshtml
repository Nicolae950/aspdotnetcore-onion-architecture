@using WebApp.DTOs
@model UserDTO;

<h3>Login</h3>

<div class="form-control">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label p-1"></label>
                <input asp-for="Email" class="form-control p-1" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label p-1"></label>
                <input type="password" asp-for="Password" class="form-control p-1" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group p-2">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>